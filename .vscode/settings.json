{
  "editor.rulers": [80, 120],
  "editor.defaultFormatter": "dprint.dprint",
  "[csharp]": {
    "editor.defaultFormatter": "csharpier.csharpier-vscode"
  },
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.renderWhitespace": "boundary",
  "files.associations": {
    "*.gitmsgtpl": "git-commit"
  },
  "evenBetterToml.schema.associations": {
    // Because there is no schema for cog yet but there is another schema for
    // another unrelated tool called cog that evenBetterToml discovers which
    // causes all sorts of havoc.
    "cog.toml": "https://json.schemastore.org/base.json"
  },
  "emojisense.languages": {
    "csharp": true
  }
}
